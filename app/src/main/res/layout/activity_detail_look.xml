<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/logo2"
            android:contentDescription="Look Note 로고" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025.06.03"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/matcha"
            android:fontFamily="@font/pretendardvariable"
            android:textFontWeight="900"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop"
            android:contentDescription="옷 사진" />

        <!-- 상의 하의 신발 기타 텍스트 -->
        <TextView
            android:id="@+id/textTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상의: "
            android:textSize="16sp"
            android:fontFamily="@font/pretendardvariable"
            android:textFontWeight="200"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="하의: "
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pretendardvariable"
            android:textFontWeight="200"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textShoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="신발: "
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pretendardvariable"
            android:textFontWeight="200"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textEtc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기타: "
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pretendardvariable"
            android:textFontWeight="200"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👗 Look Note"
            android:textColor="@color/matcha"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/pretendardvariable"
            android:textFontWeight="600" />

        <EditText
            android:id="@+id/textMemo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/memo"
            android:padding="16dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pretendardvariable"
            android:textFontWeight="200"
            android:gravity="top|start"
            android:layout_marginBottom="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete"
                android:layout_marginEnd="12dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#FECCBE"
                android:paddingHorizontal="16dp" />

            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="edit"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/matcha"
                android:paddingHorizontal="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
